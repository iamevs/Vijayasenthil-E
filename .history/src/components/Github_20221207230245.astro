---
// import GitHubCalendar from "github-calendar";
import Coffee from "./../assets/coffee.png";
// import Calender from "./Calender.html";
// import GitHubCalendar from "react-github-calendar";
---

<div class="calender-container">
  <div class="head-container">
    <h2 id="head">My Coding Routine</h2>
    <img src={Coffee} alt="coffee" />
  </div>

  <!-- <div class="Github-calender">
  <div id="calender" class="calendar"></div>
</div> -->

  <div class="Github-calender">
    <div id="calender" class="calendar"></div>
    <iframe src="Calender.html" frameborder="0" width="100%" height="400px"
    ></iframe>
    <!-- <Calender /> -->
  </div>
</div>

<style>
  .calendar-container {
    display: flex;
    align-items: center;
    justify-content: center;
    /* margin: 0 auto; */
    width: 100%;
    height: 100%;
  }
  .head-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    margin: 0 auto;
    width: 100%;
    height: 100%;
  }
  .head-container img {
    width: 50px;
    height: 50px;
    margin-left: 10px;
    transform: translateY(-10px);
  }
  #head {
    font-size: 4.4rem;
    color: #3a86ff;
    font-weight: 600;
    margin-bottom: 20px;
    text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
  }
  .Github-calender {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
