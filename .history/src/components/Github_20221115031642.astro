---
import GitHubCalendar from "github-calendar";
import Coffee from "../../public/assets/coffee.png";
---

<div class="calender-container">
  <div class="head-container"><h2 id="head"> Days I code <span><img src={Coffee} alt="coffee"></span></h2></div>
 
<div class="Github-calender">
  <div class="calendar"></div>
</div>
</div>

<style>
  .calendar-container {
    display: flex;
    align-items: center;
    justify-content: center;
    /* margin: 0 auto; */
    width: 100%;
    height: 100%;
  }
  #head > span > img {
    width: 30px;
    height: 30px;
  }
  .head-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    width: 100%;
    height: 100%;
  }
  #head {
    font-size: 4.4rem;
    color: #3a86ff;
    font-weight: 600;
    margin-bottom: 20px;
    text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
  }
  .Github-calender {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .calendar {
    padding: 30px;
    width: 80%;
    color: #fff;
    height: 100%;
    /* font-size: 0.5rem; */
    font-weight: 600;
    font-style: bold;
    letter-spacing: 1px;
  }
</style>
