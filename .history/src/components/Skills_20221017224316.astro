<style>
    .section-skills{
        background: #1f1f1f;
    }
    .skills-container{
        position: relative;
        display: flex;
        background: #1f1f1f;
        justify-content: center;
        flex-wrap: wrap;
        /* padding: 20px 0; */
        padding-left: 30px;

    }
    .skills-card{
        /* padding:20px; */
        position :relative;
        background: #fff;
        display:flex;
        width:250px;
        height: 250px;
        margin: 30px 0;
        border-radius:20px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }    
    .skills-card .imgBx{
        position :absolute;
        top: 10px;
        left: 10px;
        background:rgba(255,255,255,0.2);
        backdrop-filter: blur(10px);
        height : calc(100%-20px);
        width : calc(100%-20px);
        /* width: 230px; */
        background: #3ff;
    }
    .skills-card .imgBx img{
        position: relative;
        height:230px;
    }

</style>
