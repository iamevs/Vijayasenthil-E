<style>
    #head {
        font-size: 4.4rem;
        color: #3a86ff;
        font-weight: 600;
        margin-bottom: 20px;
        text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
    }
    #mini-head{
        font-size: 2.4rem;
        color: #3a86ff;
        font-weight: 600;
        margin-bottom: 20px;
        text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
    }
    .project-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 10rem;
        padding-bottom: 10rem;
        max-width: 100%;
        background-color: #22272e !important;

    }
    .project-container,
    .projectcard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        padding-top: 5rem;
        max-width: 100%;
        background-color: #22272e !important;
    }

    .project-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 400px;
        height: 400px;
        margin: 1rem;
        /* background-color: #fff; */
        background-color: transparent;
        backdrop-filter: blur(10px);
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .project-card:hover {
        transform: translateY(-5px);
        backdrop-filter: blur(20px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .project-card__image {
        margin-top: 20px;
        width: 200px;
        height: 200px;
        overflow: hidden;
        align-items: center;
        display: flex;
    }
    
    .project-card__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
    }

    .project-card__content {
        padding: 1rem;
    }

    .project-card__title {
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
    }

    .project-card__description {
        margin-bottom: 1rem;
        font-size: 2rem;
        font-weight: 400;
        text-align: center;
        color: #ccc;
    }

    .project-card__link {
        display: inline-block;
        padding: 1rem;
        font-size: 1rem;
        font-weight: 700;
        text-decoration: none;
        color: #ccc;
        background-color: rgba(51, 51, 51, 0.259);
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        position: relative;
        left: 135px;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .project-card__link:hover {
        background-color: #333;
        transform: translateY(-5px);
    }
</style>
