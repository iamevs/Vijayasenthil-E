---
    import Img1 from "../assets/evs.webp";
    import PortfolioProject from "../assets/portfolio-project.jpg";
    import win11 from "../assets/win-11.jpg";
    import calc from "../assets/calc.jpg";
    import chatapp from "../assets/chat-app.jpg";
    import tsh from "../assets/tsh.jpg";
---

<div class="project-container">
    <div class="ptoject-title">
        <h1 id="head">Projects</h1>
    </div>
    <div class="projectcard-container">
        <div class="project-card">
            <div class="project-card__image">
                <img
                    src={PortfolioProject}
                    alt="project image"
                />
            </div>
            <div class="project-card__content">
                <h3 class="project-card__title" id="mini-head">Portfolio Site </h3>
                <p class="project-card__description">
                    A webpage for my portfolio build using ReactJs, Astro, Svelte.  
                </p>
                <a href="https://www.github.com/iamevs/Vijayasenthil-E" class="project-card__link">View Project</a>
            </div>
        </div>
        <div class="project-card">
            <div class="project-card__image">
                <img
                    src={win11}
                    alt="project image"
                />
            </div>
            <div class="project-card__content">
                <h3 class="project-card__title" id="mini-head"> Windows 11 - Clone </h3>
                <p class="project-card__description">
                    A complete clone of windows 11 build using Lit Framework. <i>Currently on progress, if intrested anyone can add their stuffs </i> 
                </p>
                <a href="https://www.github.com/iamevs/Vijayasenthil-E" class="project-card__link">View Project</a>
            </div>
        </div>
        <div class="project-card">
            <div class="project-card__image">
                <img
                    src={tsh}
                    alt="project image"
                />
            </div>
            <div class="project-card__content">
                <h3 class="project-card__title" id="mini-head">PBL project Docs</h3>
                <p class="project-card__description">
                    A documentation for my PBL project Tech-Savvy-Home .
                </p>
                <a href="https://github.com/iamevs/Tech-Savvy-Home" class="project-card__link">View Project</a>
            </div>
        </div>
        <div class="project-card">
            <div class="project-card__image">
                <img
                    src={calc}
                    alt="project image"
                />
            </div>
            <div class="project-card__content">
                <h3 class="project-card__title" id="mini-head"> Calculator - Application </h3>
                <p class="project-card__description">
                    A simple calculator application built using electronJs.
                </p>
                <a href="https://github.com/iamevs/calculator-electron-js" class="project-card__link">View Project</a>
            </div>
        </div>
        <div class="project-card">
            <div class="project-card__image">
                <img
                    src={chatapp}
                    alt="project image"
                />
            </div>
            <div class="project-card__content">
                <h3 class="project-card__title" id="mini-head"> Chat app</h3>
                <p class="project-card__description">
                    A simple chat application built using ReactJs, NodeJs, ExpressJs, Socket.io.
                </p>
                <a href="https://github.com/iamevs/Chat-app-React" class="project-card__link">View Project</a>
            </div>
        </div>
    </div>
    <a href="https://www.github.com/iamevs"  class="more"id="mini-head" style="margin-top: 40px; text-decoration: none;">More projects on my Github</a>
</div>

<style>
    #head {
        font-size: 4.4rem;
        color: #3a86ff;
        font-weight: 600;
        margin-bottom: 20px;
        text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
    }
    #mini-head{
        font-size: 2.4rem;
        color: #3a86ff;
        font-weight: 600;
        margin-bottom: 20px;
        text-shadow: -10px 10px 15px rgba(0, 0, 0, 0.8);
    }

    .more:hover{
        transform: scale(1.1);
    }
    .project-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 10rem;
        padding-bottom: 10rem;
        max-width: 100%;
        background-color: #22272e !important;

    }
    .project-container,
    .projectcard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        padding-top: 5rem;
        max-width: 100%;
        background-color: #22272e !important;
    }

    .project-card {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 400px;
        height: auto;
        margin: 1rem;
        /* background-color: #fff; */
        background-color: transparent;
        backdrop-filter: blur(10px);
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease-in-out;
    }

    .project-card:hover {
        transform: translateY(-5px);
        backdrop-filter: blur(20px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .project-card__image {
        margin-top: 20px;
        width: auto;
        height: 200px;
        overflow: hidden;
        align-items: center;
        display: flex;
    }
    
    .project-card__image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 5px;
    }

    .project-card__image img:hover {
        transform: scale(1.1);
        transition: transform 0.3s ease-in-out;
    }

    .project-card__content {
        padding: 1rem;
    }

    .project-card__title {
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
        font-weight: 700;
        text-align: center;
    }

    .project-card__description {
        margin-bottom: 1rem;
        font-size: 2rem;
        font-weight: 400;
        text-align: center;
        color: #ccc;
    }

    .project-card__link {
        display: inline-block;
        padding: 1rem;
        font-size: 1rem;
        font-weight: 700;
        text-decoration: none;
        color: #ccc;
        background-color: rgba(51, 51, 51, 0.259);
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
        position: relative;
        left: 135px;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .project-card__link:hover {
        background-color: #333;
        transform: translateY(-5px);
    }
</style>
